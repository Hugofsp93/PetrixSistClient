@model IEnumerable<PetrixSisClient.Models.Tipo>

@{
    ViewBag.Title = "Tipos";
}

    <div class="card">
        <div class="card-header" style="display: inline-flex;">
            <h2>Lista de Animais</h2>
            <a href='@Url.Action("Create","Tipoes")' style="margin-top: 25px; margin-left: 35px;"><i class="zmdi zmdi-plus"></i></a>
        </div>
        <br />
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Descrição</th>
                        <th></th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.ds_tipo)</td>
                            <td>
                                <a href='@Url.Action("Details", new { id = item.id_tipo })'><span class="zmdi zmdi-search"></span></a>
                            </td>
                            <td>
                                <a href='@Url.Action("Edit", new { id = item.id_tipo })'><span class="zmdi zmdi-edit"></span></a>
                            </td>
                            <td>
                                <a href='@Url.Action("Delete", new { id = item.id_tipo })'><span class="zmdi zmdi-delete"></span></a>
                            </td>
                        </tr>

                    }

                </tbody>
            </table>
        </div>
    </div>
